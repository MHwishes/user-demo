#!/usr/bin/env groovy

pipeline {
  agent any
  stages {
    stage('Build') {
      tools {
        nodejs 'v8.1.4'
      }
      steps {
        sh 'sh ./assembly/setup.sh'
      }
      post {
        failure {
          cleanWs()
        }
      }
    }
    stage('Unit Tests') {
      tools {
        nodejs 'v8.1.4'
        gradle 'v3.3'
      }
      steps {
        sh 'sh ./assembly/test.sh'
      }
      post {
        failure {
          cleanWs()
        }
      }
    }
  }
}
